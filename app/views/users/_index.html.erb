<% @users.each do |user| %>
  <tr>
    <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
    <td><%= user.uid %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
   
    <td>
	    <div class="action-buttons">
			<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_user_path(user), title: "Modifier", remote: true %>




<%= link_to raw('<i class="far fa-trash-alt" aria-hidden="true"></i>
'), user_delete_path(user), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
  </tr>
<% end %>