<p id="notice"><%= notice %></p>

<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Slug</th>
      <th>Candidate category</th>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.uid %></td>
        <td><%= candidate.slug %></td>
        <td><%= candidate.candidate_category_id %></td>
        <td><%= candidate.name %></td>
        <td><%= candidate.title %></td>
        <td><%= candidate.content %></td>
        <td><%= candidate.status %></td>
        <td><%= candidate.account_id %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

