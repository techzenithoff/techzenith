<% @posts.each do |post| %>
      <tr>
       <td><%= post.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= post.post_category.name %></td>
        <td><%= post.title %></td>
        
        <td>
        <div class="action-buttons">
            <%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_post_path(post), title: "Modifier", remote: true %>


<%= link_to raw('<i class="far fa-trash-alt"></i>
'), post_delete_path(post), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
      </tr>
    <% end %>